<?xml version='1.0' encoding='UTF-8'?>

<project>
    <target name="dita2ia-webhelp-responsive"
            depends="dita2webhelp-responsive-custom-css.init,
               dita2webhelp-responsive-custom-css.copy,
               dita2webhelp-responsive-custom-css.copy.img,
               dita2webhelp-responsive"/>
    <target name="dita2webhelp-responsive-custom-css.init">
        <property name="args.css.file" value="css/custom.css"/>
    </target>
    <target name="dita2webhelp-responsive-custom-css.copy">
        <copy file="plugins/com.ia-trainee-task/css/custom.css" todir="${output.dir}/css"/>
    </target>
    <target name="dita2webhelp-responsive-custom-css.copy.img">
        <copy todir="${output.dir}/css/images">
            <fileset dir="plugins/com.ia-trainee-task/css/images"/>
        </copy>
    </target>

</project>