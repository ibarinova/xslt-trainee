<?xml version='1.0' encoding='UTF-8'?>
<project>
    <target name="dita2ia-webhelp-responsive-YB"
            depends="dita2webhelp-responsive-YB-custom-css.init,
               dita2webhelp-responsive-YB-custom-css.copy,
               dita2webhelp-responsive-YB-contain,
               dita2webhelp-responsive-YB-contain2,
               dita2index-term-page,
               dita2go.to.top.btn,
               dita2custom-favicon,
               dita2custom-mainbooktitle,
               dita2use-template,
               dita2webhelp-responsive"/>


    <target name="dita2webhelp-responsive-YB-custom-css.init">
        <echo> 111 </echo>
        <property name="args.css.file" value="css/custom-red.css"/>
        <property name="webhelp.publishing.template" value="${dita.plugin.com.ia-trainee-task-YB.dir}/templates/my_own_tiles.opt"/>
    </target>

    <target name="dita2webhelp-responsive-YB-custom-css.copy">
        <copy file="plugins/com.ia-trainee-task-YB/css/custom-red.css" todir="${output.dir}/css"/>
        <copy todir="${output.dir}/images">
            <fileset dir="${dita.plugin.com.ia-trainee-task-YB.dir}/css/images"/> </copy>
        <condition property="contain">
            <contains substring="user" string="${args.input}"/>
        </condition>
    </target>


    <target name="dita2webhelp-responsive-YB-contain" if="contain">
            <echo message="there is a user!!!!!"/>
    </target>
    <target name="dita2webhelp-responsive-YB-contain2" unless="contain">
            <echo message="there is NO user!!!!!"/>
    </target>

    <condition property="check-transtype">
        <equals arg1="${transtype}" arg2="ia-webhelp-responsive-YB" trim="true"/>
    </condition>
    <target name="dita2index-term-page" if="check-transtype">
        <property name="webhelp.template.index.terms.file"
                  value="${dita.plugin.com.ia-trainee-task-YB.dir}/templates/customIndexTerms.html"/>
    </target>

    <target name="dita2go.to.top.btn">
        <copy todir="${output.dir}/js">
            <fileset dir="${dita.plugin.com.ia-trainee-task-YB.dir}/js"/>
        </copy>
        <property name="webhelp.fragment.after.body"
                  value="${dita.plugin.com.ia-trainee-task-YB.dir}/goToTopBtn.xml"/>
    </target>

    <target name="dita2custom-favicon">
        <property name="webhelp.favicon"
                  value="${dita.plugin.com.ia-trainee-task-YB.dir}/css/images/favicon.png"/>
    </target>

    <target name="dita2custom-mainbooktitle">
        <property name="webhelp.logo.image"
                  value="${dita.plugin.com.ia-trainee-task-YB.dir}/css/images/logo.svg"/>
    </target>

    <target name="dita2use-template" if="check-transtype">
        <property name="webhelp.fragment.footer"
                  value="${dita.plugin.com.ia-trainee-task-YB.dir}/templates/intelliarts_footer.xml"/>
    </target>

